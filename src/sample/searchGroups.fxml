<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SearchGroupController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
      <RowConstraints minHeight="110.0" prefHeight="30.0" />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <children>
        <HBox>
            <children>
                <TextField fx:id="searchString" alignment="BOTTOM_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="302.0" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#searchAction" text="Искать" GridPane.halignment="LEFT" />
            </children>
        </HBox>
        <TableView fx:id="groupsList" GridPane.rowIndex="2">
            <columns>
                <TableColumn fx:id="invite" text="ID" />
                <TableColumn fx:id="groupIdColumn" text="ID" />
                <TableColumn fx:id="groupNameColumn" text="Наименование" />
                <TableColumn fx:id="groupCanPostedColumn" text="Можно постить?" />
            </columns>
        </TableView>
      <Button mnemonicParsing="false" onAction="#invite" text="Вступить" GridPane.rowIndex="3" />
      <TextArea fx:id="logger" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="dsfsad" GridPane.rowIndex="4" />
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
         <children>
            <CheckBox fx:id="onlyPostCheckbox" mnemonicParsing="false" text="Искать только где можно постить">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" top="10.0" />
               </VBox.margin>
            </CheckBox>
            <ComboBox fx:id="countryList" prefWidth="150.0">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </ComboBox>
             <ComboBox fx:id="cityList" prefWidth="150.0">
                 <VBox.margin>
                     <Insets left="10.0" top="10.0" />
                 </VBox.margin>
             </ComboBox>
         </children>
      </VBox>
    </children>
</GridPane>
